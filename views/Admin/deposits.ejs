<% include ../partials/header %>
<style>
  .btn-reset {
    background: transparent;
    padding: 0;
    border: 0;
  }
</style>
<div class="row-col m-b-lg">
  <div class="col-sm-3 col-lg-2 b-r">
    <div class="p-y">
      <div class="nav-active-border left b-primary">
        <ul class="nav nav-sm">
          <li class="nav-item">
            <a
              class="nav-link block active"
              href="#"
              data-toggle="tab"
              data-target="#tab-1"
              >Pending Deposits</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link block"
              href="#"
              data-toggle="tab"
              data-target="#tab-2"
              >Approved Deposits</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link block"
              href="#"
              data-toggle="tab"
              data-target="#tab-3"
              >Declined Deposits</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-9 col-lg-10 light bg">
    <div class="tab-content pos-rlt">
      <div class="tab-pane active" id="tab-1">
        <div class="p-a-md b-b _600">Pending Deposits</div>
        <div class="p-a-md">
          <div class="clearfix m-b-lg">
            <div class="box">
              <div class="box-body">
                Search:
                <input
                  id="filter1"
                  type="text"
                  class="form-control input-sm w-auto inline m-r"
                />
              </div>
              <div>
                <table
                  class="table m-b-none"
                  data-ui-jp="footable"
                  id="pending-deposits"
                  data-filter="#filter1"
                  data-page-size="5"
                >
                  <thead>
                    <tr>
                      <th data-toggle="true">
                        #
                      </th>
                      <th>
                        Amount
                      </th>
                      <th>
                        UserID
                      </th>
                      <th>
                        Full Name
                      </th>
                      <th data-hide="phone">
                        Bank Name
                      </th>
                      <th data-hide="phone">
                        Payment Mode
                      </th>
                      <th>
                        Status
                      </th>
                      <th data-hide="phone">
                        Date
                      </th>
                      <th>
                        Action
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% var pendingCounter = 1%> <%
                    pendingDeposits.forEach(deposit => { %>
                    <tr>
                      <td data-value="<%= pendingCounter %>">
                        <%= pendingCounter %>
                      </td>
                      <td><%= deposit.amount %></td>
                      <td><%= deposit.depositor.username %></td>
                      <td><%= deposit.depositor.fullname %></td>
                      <td><%= deposit.bank %></td>
                      <td><%= deposit.paymentMode %></td>
                      <td>
                        <span class="label warning" title="Pending"
                          >Pending</span
                        >
                      </td>
                      <td data-value="<%= pendingCounter %>">
                        <%= deposit.createdAt.toDateString() %>
                      </td>
                      <td>
                        <form
                          method="POST"
                          action="deposits/<%= deposit._id %>?_method=PUT"
                        >
                          <button
                            class="btn-reset pull-left"
                            title="Approve Deposit"
                          >
                            <i class="ion-checkmark-circled text-info"></i>
                          </button>
                        </form>
                        <form
                          method="POST"
                          action="deposits/<%= deposit._id %>?_method=DELETE"
                        >
                          <button
                            class="btn-reset pull-left m-l-md"
                            title="Decline Deposit"
                          >
                            <i class="ion-close-circled text-danger"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% pendingCounter++ %> <% }); %>
                  </tbody>
                  <tfoot class="hide-if-no-paging">
                    <tr>
                      <td colspan="5" class="text-center">
                        <ul class="pagination"></ul>
                      </td>
                    </tr>
                  </tfoot>
                </table>
              </div>
              <div class="p-a-md" id="options">
                <a
                  href="#"
                  type="button"
                  id="deposit-export-btn"
                  class="btn btn-sm green"
                >
                  Export to Excel
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="tab-2">
        <div class="p-a-md b-b _600">Approved Deposits</div>
        <div class="p-a-md">
          <div class="clearfix m-b-lg">
            <div class="box">
              <div class="box-body">
                Search:
                <input
                  id="filter2"
                  type="text"
                  class="form-control input-sm w-auto inline m-r"
                />
              </div>
              <div>
                <table
                  class="table m-b-none"
                  data-ui-jp="footable"
                  data-filter="#filter2"
                  data-page-size="5"
                >
                  <thead>
                    <tr>
                      <th data-toggle="true">
                        #
                      </th>
                      <th>
                        Amount
                      </th>
                      <th>
                        Depositor
                      </th>
                      <th>
                        Full Name
                      </th>
                      <th data-hide="phone">
                        Bank Name
                      </th>
                      <th data-hide="phone">
                        Payment Mode
                      </th>
                      <th>
                        Status
                      </th>
                      <th data-hide="phone">
                        Date
                      </th>
                      <th>
                        Action
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% var approvedCounter = 1%> <%
                    approvedDeposits.forEach(deposit => { %>
                    <tr>
                      <td data-value="<%= approvedCounter %>">
                        <%= approvedCounter %>
                      </td>
                      <td><%= deposit.amount %></td>
                      <td><%= deposit.depositor.username %></td>
                      <td><%= deposit.depositor.fullname %></td>
                      <td><%= deposit.bank %></td>
                      <td><%= deposit.paymentMode %></td>
                      <td>
                        <span class="label success" title="Approved"
                          >Approved</span
                        >
                      </td>
                      <td data-value="<%= approvedCounter %>">
                        <%= deposit.createdAt.toDateString() %>
                      </td>
                      <td>
                        <form
                          method="POST"
                          action="undodeposit/<%= deposit._id %>?_method=PUT"
                        >
                          <button
                            class="btn-reset pull-left"
                            title="Undo Approve"
                          >
                            <i class="ion-ios-undo text-info"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% approvedCounter++ %> <% }); %>
                  </tbody>
                  <tfoot class="hide-if-no-paging">
                    <tr>
                      <td colspan="5" class="text-center">
                        <ul class="pagination"></ul>
                      </td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="tab-3">
        <div class="p-a-md b-b _600">Declined Deposits</div>
        <div class="p-a-md">
          <div class="clearfix m-b-lg">
            <div class="box">
              <div class="box-body">
                Search:
                <input
                  id="filter3"
                  type="text"
                  class="form-control input-sm w-auto inline m-r"
                />
              </div>
              <div>
                <table
                  class="table m-b-none"
                  data-ui-jp="footable"
                  data-filter="#filter3"
                  data-page-size="5"
                >
                  <thead>
                    <tr>
                      <th data-toggle="true">
                        #
                      </th>
                      <th>
                        Amount
                      </th>
                      <th>
                        Depositor
                      </th>
                      <th>
                        Full Name
                      </th>
                      <th data-hide="phone">
                        Bank Name
                      </th>
                      <th data-hide="phone">
                        Payment Mode
                      </th>
                      <th>
                        Status
                      </th>
                      <th data-hide="phone">
                        Date
                      </th>
                      <th>
                        Action
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% var declinedCounter = 1%> <%
                    declinedDeposits.forEach(deposit => { %>
                    <tr>
                      <td data-value="<%= declinedCounter %>">
                        <%= declinedCounter %>
                      </td>
                      <td><%= deposit.amount %></td>
                      <td><%= deposit.depositor.username %></td>
                      <td><%= deposit.depositor.fullname %></td>
                      <td><%= deposit.bank %></td>
                      <td><%= deposit.paymentMode %></td>
                      <td>
                        <span class="label danger" title="Declined"
                          >Declined</span
                        >
                      </td>
                      <td data-value="<%= declinedCounter %>">
                        <%= deposit.createdAt.toDateString() %>
                      </td>
                      <td>
                        <form
                          method="POST"
                          action="undodeposit/<%= deposit._id %>?_method=DELETE"
                        >
                          <button
                            class="btn-reset pull-left"
                            title="Undo Decline"
                          >
                            <i class="ion-ios-undo text-info"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% declinedCounter++ %> <% }); %>
                  </tbody>
                  <tfoot class="hide-if-no-paging">
                    <tr>
                      <td colspan="5" class="text-center">
                        <ul class="pagination"></ul>
                      </td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>
