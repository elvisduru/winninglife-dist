<% include ../../partials/header %>
<style>
  .link-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
</style>
<div class="app-body-inner">
  <div class="row-col">
    <div class="col-md-3">
      <div class="box m-y-md">
        <div class="box-header">Filter</div>
        <div class="box-body">
          <ul class="list-unstyled">
            <li class="radio">
              <label class="ui-check">
                <input type="radio" name="filter" checked /><i></i> Today
              </label>
            </li>
            <li class="radio">
              <label class="ui-check">
                <input type="radio" name="filter" /><i></i> Last Week
              </label>
            </li>
            <li class="radio">
              <label class="ui-check">
                <input type="radio" name="filter" /><i></i> Last Month
              </label>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="row-col">
        <div class="row-row">
          <div class="row-body">
            <div class="row-inner m-b-lg">
              <div class="padding">
                <% events.forEach(event => { %>
                <div class="col-sm-4">
                  <a class="link-overlay" href="/admin/events/<%= event._id %>">
                    <div class="box">
                      <div class="box-tool">
                        <ul class="nav">
                          <li class="nav-item inline dropdown">
                            <a class="nav-link text-muted" data-toggle="dropdown">
                              <i class="material-icons md-18">menu</i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-scale pull-right dark">
                              <a class="dropdown-item" href="<%= event._id %>/edit">Edit</a>
                              <form method="POST" action="/admin/events/<%= event._id %>?_method=DELETE">
                                <button class="dropdown-item" href="#">Delete</button>
                              </form>
                            </div>
                          </li>
                        </ul>
                      </div>
                      <img src="<%= event.image %>" alt="" class="img-responsive" />
                      <div class="p-a-sm">
                        <div class="text-ellipsis">
                          <h4><%= event.title %></h4>
                        </div>
                        <div class="text-ellipsis"><%= event.dayFrom %> - <%= event.dayTo %>, <%= event.month %></div>
                      </div>
                    </div>
                  </a>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../../partials/footer %>