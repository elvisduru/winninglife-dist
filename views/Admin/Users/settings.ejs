<% include ../../partials/header %>
<div class="padding">
  <h6 class="_600 m-b-md">User Settings</h6>
  <div class="form-group m-b-0 row"><label class="col-sm-2 form-control-label">Allow Withdrawals</label>
    <div class="col-sm-10">
      <label class="ui-switch m-t-xs m-r">
        <input type="checkbox" class="withdraw-switch" <%= makeWithdrawal === 'true' ? 'checked=checked' : null %>>
        <i></i></label>
    </div>
  </div>
  <div class="form-group m-b-0 row"><label class="col-sm-2 form-control-label">Show Announcement</label>
    <div class="col-sm-10">
      <label class="ui-switch m-t-xs m-r">
        <input type="checkbox" class="announcement-switch"
          <%= showAnnouncement === 'true' ? 'checked=checked' : null %>>
        <i></i></label>
    </div>
  </div>
</div>

<% include ../../partials/footer %>