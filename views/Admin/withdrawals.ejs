<% include ../partials/header %>
	<style>
		.btn-reset {
			background: transparent;
			padding: 0;
			border: 0;
		}
	</style>
	<div class="row-col m-b-lg">
	  <div class="col-sm-3 col-lg-2 b-r">
	    <div class="p-y">
	      <div class="nav-active-border left b-primary">
	        <ul class="nav nav-sm">
	          <li class="nav-item">
	            <a class="nav-link block active" href="#" data-toggle="tab" data-target="#tab-1">Pending Withdrawals</a>
	          </li>
	          <li class="nav-item">
	            <a class="nav-link block" href="#" data-toggle="tab" data-target="#tab-2">Approved Withdrawals</a>
	          </li>
	          <li class="nav-item">
	            <a class="nav-link block" href="#" data-toggle="tab" data-target="#tab-3">Declined Withdrawals</a>
	          </li>
	        </ul>
	      </div>
	    </div>
	  </div>
	  <div class="col-sm-9 col-lg-10 light bg">
	    <div class="tab-content pos-rlt">
	      <div class="tab-pane active" id="tab-1">
	        <div class="p-a-md b-b _600">Pending Withdrawals</div>
	        <div class="p-a-md">
	          <div class="clearfix m-b-lg">
	            <div class="box">
	              <div class="box-body">
	                Search: <input id="filter4" type="text" class="form-control input-sm w-auto inline m-r"/>
	              </div>
	              <div>
	                <table class="table m-b-none" data-ui-jp="footable" data-filter="#filter4" data-page-size="5">
	                  <thead>
	                    <tr>
	                        <th data-toggle="true">
	                            #
	                        </th>
	                        <th>
	                            Type
	                        </th>
	                        <th>
	                        	Amount
	                        </th>
	                        <th>
	                            Withdrawer
	                        </th>
	                        <th>
	                            Status
	                        </th>
	                        <th data-hide="phone">
	                            Date
	                        </th>
	                        <th>
	                        	Action
	                        </th>
	                    </tr>
	                  </thead>
	                  <tbody>
					          	<% var pendingCounter = 1, type = "";;%>
					          	<% pendingWithdrawals.forEach(withdrawal => { %>
					          	<% if (withdrawal.type === 'ref') { %>
									<% type = "Referral"%>
					          	<% } else { %>
									<% type = "Rank" %>	
					          	<% } %>
					          	<tr>
					          		<td data-value="<%= pendingCounter %>"><%= pendingCounter %></td>
					          		<td><%= type %></td>
					          		<td><%= withdrawal.amount %></td>
					          		<td><%= withdrawal.withdrawer.username %></td>
					          		<td><span class="label warning" title="Pending">Pending</span></td>
					          		<td data-value="<%= pendingCounter %>"><%= withdrawal.createdAt.toDateString() %></td>
					          		<td>
					          			<form method="POST" action="withdrawals/<%= withdrawal._id %>?_method=PUT">
					          				<button class="btn-reset pull-left" title="Approve Deposit"><i class="ion-checkmark-circled text-info"></i></button>
					          			</form>
					          			<form method="POST" action="withdrawals/<%= withdrawal._id %>?_method=DELETE">
					          				<button class="btn-reset pull-left m-l-md" title="Decline Deposit"><i class="ion-close-circled text-danger"></i></button>
					          			</form>
					          		</td>
					          	</tr>
											<% pendingCounter++ %>
					          	<% }); %>
					          </tbody>
	                  <tfoot class="hide-if-no-paging">
	                    <tr>
	                        <td colspan="5" class="text-center">
	                            <ul class="pagination"></ul>
	                        </td>
	                    </tr>
	                  </tfoot>
	                </table>
	              </div>
	            </div>
	          </div>
	        </div>
	      </div>
	      <div class="tab-pane" id="tab-2">
	        <div class="p-a-md b-b _600">Approved Withdrawals</div>
	        <div class="p-a-md">
	          <div class="clearfix m-b-lg">
	            <div class="box">
	              <div class="box-body">
	                Search: <input id="filter5" type="text" class="form-control input-sm w-auto inline m-r"/>
	              </div>
	              <div>
	                <table class="table m-b-none" data-ui-jp="footable" data-filter="#filter5" data-page-size="5">
	                  <thead>
	                    <tr>
	                        <th data-toggle="true">
	                            #
	                        </th>
	                        <th>
	                            Type
	                        </th>
	                        <th>
	                        	Amount
	                        </th>
	                        <th>
	                            Withdrawer
	                        </th>
	                        <th>
	                            Status
	                        </th>
	                        <th data-hide="phone">
	                            Date
	                        </th>
	                        <th>
	                        	Action
	                        </th>
	                    </tr>
	                  </thead>
	                  <tbody>
					          	<% var approvedCounter = 1, type = "";%>
					          	<% approvedWithdrawals.forEach(withdrawal => { %>
					          	<tr>
					          		<td data-value="<%= approvedCounter %>"><%= approvedCounter %></td>
					          		<td><%= withdrawal.amount %></td>
					          		<td><%= withdrawal.withdrawer.username %></td>
					          		<td><span class="label success" title="Approved">Approved</span></td>
					          		<td data-value="<%= approvedCounter %>"><%= withdrawal.createdAt.toDateString() %></td>
					          		<td>
					          			<form method="POST" action="undowithdrawal/<%= withdrawal._id %>?_method=PUT">
					          				<button class="btn-reset pull-left" title="Undo Approve"><i class="ion-ios-undo text-info"></i></button>
					          			</form>
					          		</td>
					          	</tr>
											<% approvedCounter++ %>
					          	<% }); %>
					          </tbody>
	                  <tfoot class="hide-if-no-paging">
	                    <tr>
	                        <td colspan="5" class="text-center">
	                            <ul class="pagination"></ul>
	                        </td>
	                    </tr>
	                  </tfoot>
	                </table>
	              </div>
	            </div>
	          </div>
	        </div>
	      </div>
	      <div class="tab-pane" id="tab-3">
	        <div class="p-a-md b-b _600">Declined Withdrawals</div>
            <div class="p-a-md">
              <div class="clearfix m-b-lg">
                <div class="box">
                  <div class="box-body">
                    Search: <input id="filter6" type="text" class="form-control input-sm w-auto inline m-r"/>
                  </div>
                  <div>
                    <table class="table m-b-none" data-ui-jp="footable" data-filter="#filter6" data-page-size="5">
                      <thead>
                        <tr>
                            <th data-toggle="true">
	                            #
	                        </th>
	                        <th>
	                            Type
	                        </th>
	                        <th>
	                        	Amount
	                        </th>
	                        <th>
	                            Withdrawer
	                        </th>
	                        <th>
	                            Status
	                        </th>
	                        <th data-hide="phone">
	                            Date
	                        </th>
	                        <th>
	                        	Action
	                        </th>
                        </tr>
                      </thead>
                      <tbody>
    				          	<% var declinedCounter = 1, type = "";%>
    				          	<% declinedWithdrawals.forEach(withdrawal => { %>
    				          	<tr>
    				          		<td data-value="<%= declinedCounter %>"><%= declinedCounter %></td>
    				          		<td><%= withdrawal.amount %></td>
    				          		<td><%= withdrawal.withdrawer.username %></td>
    				          		<td><span class="label danger" title="Declined">Declined</span></td>
    				          		<td data-value="<%= declinedCounter %>"><%= withdrawal.createdAt.toDateString() %></td>
    				          		<td>
    				          			<form method="POST" action="undowithdrawal/<%= withdrawal._id %>?_method=DELETE">
    				          				<button class="btn-reset pull-left" title="Undo Decline"><i class="ion-ios-undo text-info"></i></button>
    				          			</form>
    				          		</td>
    				          	</tr>
    										<% declinedCounter++ %>
    				          	<% }); %>
    				          </tbody>
                      <tfoot class="hide-if-no-paging">
                        <tr>
                            <td colspan="5" class="text-center">
                                <ul class="pagination"></ul>
                            </td>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                </div>
              </div>
            </div>
	      </div>
	    </div>
	  </div>
	</div>
<% include ../partials/footer %>