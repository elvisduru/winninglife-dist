<% include ../../partials/header %>
<style>
  .link-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
</style>
<div class="app-body-inner">
  <div class="row-col">
    <div class="col-md-3">
      <div class="box m-y-md">
        <div class="box-header">Filter</div>
        <div class="box-body">
          <ul class="list-unstyled m-t-n-sm">
            <li class="checkbox">
              <label class="ui-check">
                <input type="checkbox" checked /><i></i> All
              </label>
            </li>
            <li class="checkbox">
              <label class="ui-check">
                <input type="checkbox" checked /><i></i> News
              </label>
            </li>
            <li class="checkbox">
              <label class="ui-check">
                <input type="checkbox" /><i></i> Events
              </label>
            </li>
          </ul>
          <div class="line line-dashed b-b m-b"></div>
          <ul class="list-unstyled">
            <li class="radio">
              <label class="ui-check">
                <input type="radio" name="filter" checked /><i></i> Today
              </label>
            </li>
            <li class="radio">
              <label class="ui-check">
                <input type="radio" name="filter" /><i></i> Last Week
              </label>
            </li>
            <li class="radio">
              <label class="ui-check">
                <input type="radio" name="filter" /><i></i> Last Month
              </label>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="row-col">
        <div class="row-row">
          <div class="row-body">
            <div class="row-inner m-b-lg">
              <div class="padding">
                <% blogs.forEach(blog => { %>
                <div class="col-sm-4">
                  <a class="link-overlay" href="/admin/blogs/<%= blog.slug %>">
                    <div class="box">
                      <div class="box-tool">
                        <ul class="nav">
                          <li class="nav-item inline dropdown">
                            <a
                              class="nav-link text-muted"
                              data-toggle="dropdown"
                            >
                              <i class="material-icons md-18">menu</i>
                            </a>
                            <div
                              class="dropdown-menu dropdown-menu-scale pull-right dark"
                            >
                              <a class="dropdown-item" href="#">Edit</a>
                              <a class="dropdown-item" href="#">Delete</a>
                            </div>
                          </li>
                        </ul>
                      </div>
                      <img
                        src="<%= blog.image %>"
                        alt=""
                        class="img-responsive"
                      />
                      <div class="p-a-sm">
                        <div class="text-ellipsis">
                          <h4><%= blog.title %></h4>
                        </div>
                        <div class="text-ellipsis"><%= blog.subtitle %></div>
                      </div>
                    </div>
                  </a>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../../partials/footer %>
