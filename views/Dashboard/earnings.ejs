<% include ../partials/header %>
<div class="row-col m-b-lg">
  <div class="col-sm-3 col-lg-2 b-r">
    <div class="p-y">
      <div class="nav-active-border left b-primary">
        <ul class="nav nav-sm">
          <li class="nav-item">
            <a class="nav-link block active" href="#" data-toggle="tab" data-target="#tab-1">Rank Earnings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link block" href="#" data-toggle="tab" data-target="#tab-2">Referral Earnings</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-9 col-lg-10 light bg">
    <div class="tab-content pos-rlt">
      <div class="tab-pane active" id="tab-1">
        <div class="p-a-md b-b _600">Rank Earnings</div>
        <div class="padding">
          <div class="box">
            <div class="box-body">
              Search: <input id="filter" type="text" class="form-control input-sm w-auto inline m-r"/>
            </div>
            <div>
              <table class="table m-b-none" data-ui-jp="footable" data-filter="#filter" data-page-size="5">
                <thead>
                  <tr>
                      <th data-toggle="true">
                          #
                      </th>
                      <th>
                          Rank
                      </th>
                      <th>
                          Amount
                      </th>
                      <th data-hide="phone">
                          Date
                      </th>
                  </tr>
                </thead>
                <tbody>
                  <% var counter = 1%>
                  <% rankEarnings.forEach(rankEarning => { %>
                    <tr>
                        <td><%= counter %></td>
                        <td><%= rankEarning.rank %></td>
                        <td><%= rankEarning.amount %></td>
                        <td><%= rankEarning.created.toDateString() %></td>
                    </tr>
                  <% }); %>
                </tbody>
                <tfoot class="hide-if-no-paging">
                  <tr>
                      <td colspan="5" class="text-center">
                          <ul class="pagination"></ul>
                      </td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="tab-2">
        <div class="p-a-md b-b _600">Referral Earnings</div>
        <div class="box">
          <div class="box-body">
            Search: <input id="filter2" type="text" class="form-control input-sm w-auto inline m-r"/>
          </div>
          <div>
            <table class="table m-b-none" data-ui-jp="footable" data-filter="#filter2" data-page-size="5">
              <thead>
                <tr>
                    <th data-toggle="true">
                        #
                    </th>
                    <th>
                        From
                    </th>
                    <th>
                        Amount
                    </th>
                    <th data-hide="phone">
                        Date
                    </th>
                </tr>
              </thead>
              <tbody>
                <% var counterRef = 1%>
                <% refEarnings.forEach(refEarning => { %>
                  <tr>
                      <td><%= counterRef %></td>
                      <td><%= refEarning.from %></td>
                      <td><%= refEarning.amount %></td>
                      <td><%= refEarning.created.toDateString() %></td>
                  </tr>
                  <% counterRef++ %>
                <% }); %>
              </tbody>
              <tfoot class="hide-if-no-paging">
                <tr>
                    <td colspan="5" class="text-center">
                        <ul class="pagination"></ul>
                    </td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>
