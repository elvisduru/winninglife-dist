<% include ../partials/header %>
<div class="row-col m-b-lg">
  <div class="col-sm-3 col-lg-2 b-r">
    <div class="p-y">
      <div class="nav-active-border left b-primary">
        <ul class="nav nav-sm">
          <li class="nav-item">
            <a class="nav-link block active" href="#" data-toggle="tab" data-target="#tab-1">Transfer</a>
          </li>
          <li class="nav-item">
            <a class="nav-link block" href="#" data-toggle="tab" data-target="#tab-2">History</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-9 col-lg-10 light bg">
    <div class="tab-content pos-rlt">
      <div class="tab-pane active" id="tab-1">
        <div class="p-a-md b-b _600">Transfer Funds</div>
        <form role="form" class="p-a-md col-md-6" data-ui-jp="parsley" id="formtransfer">
          <p id="result" class="text-info hide"></p>
          <div class="form-group">
            <label for="exampleInputEmail1">Recipient's Username</label>
            <input required type="text" class="form-control" id="username" placeholder="Enter the Username of the Recipient">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Amount</label>
            <input required type="number" min="0" class="form-control" id="amount" placeholder="Enter Amount to Transfer">
          </div>
          <button type="submit" id="btnsubmit" class="btn warning m-b">Transfer Now? (Not Reversible)</button>
        </form>
      </div>
      <div class="tab-pane" id="tab-2">
        <div class="p-a-md b-b _600">Transfer History</div>
        <div class="p-a-md">
          <div class="clearfix m-b-lg">
            <div class="box">
              <div class="box-body">
                Search: <input id="filter" type="text" class="form-control input-sm w-auto inline m-r"/>
              </div>
              <div>
                <table class="table m-b-none" data-ui-jp="footable" data-filter="#filter" data-page-size="5">
                  <thead>
                    <tr>
                        <th data-toggle="true">
                            #
                        </th>
                        <th>
                            Amount
                        </th>
                        <th>
                            Recipient
                        </th>
                        <th data-hide="phone">
                            Date
                        </th>
                    </tr>
                  </thead>
                  <tbody id="transferHistory">
                    <% var status = "Pending", statusLabel = "warning", counter = 1; %>
                    <% transfers.forEach(transfer => { %>
                      <tr>
                          <td><%= counter %></td>
                          <td><%= transfer.amount %></td>
                          <td><%= transfer.to %></td>
                          <td><%= transfer.created.toDateString() %></td>
                      </tr>
                      <% counter++ %>
                    <% }); %>
                  </tbody>
                  <tfoot class="hide-if-no-paging">
                    <tr>
                        <td colspan="5" class="text-center">
                            <ul class="pagination"></ul>
                        </td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<input type="hidden" data-ui-jp="datetimepicker" data-ui-options={} class="hide">
<% include ../partials/footer %>